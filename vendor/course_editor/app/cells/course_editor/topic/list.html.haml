.topics.ce.list
  .row
    - @topics.each do |topic|
      .topic
        %a.tbox{:href => url_for(topic), :data => {:toggle => true}}
          = fit_ibox topic.image.url
          .topic-info
            .title= topic.title
            = text_div :desc, topic.desc, '没有描述信息'
          .stats
            .row
              .stat
                %i.fa.fa-newspaper-o
                %span 教程：
                %span #{topic.tutorials.count}
              .stat
                %i.fa.fa-circle-o
                %span 知识点：
                %span #{topic.points.count}