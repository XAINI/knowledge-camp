!!!
%html{:lang => :zh}
  = render_cell 'course_editor/layout', :htmlhead

  %body.tutorial-editor
    .page-header
      %a.back{:href => url_for(@topic)}
        %i.fa.fa-chevron-left
      .title
        %span 编辑教程：
        %span= @tutorial.title

      .right
        .saved{:style => 'display:none;'}
          %i.fa.fa-check
          %span 对教程的编辑已被保存
        .ops
          %a.edit.bt.btn.btn-rounded.btn-bdb{:href => url_for([:edit, @tutorial])}
            %i.fa.fa-pencil
            %span 编辑基本信息

          %a.publish.btn.btn-rounded.btn-bdb{:href => 'javascript:;'}
            %i.fa.fa-paper-plane
            %span 发布
          %a.preview.btn.btn-rounded.btn-bdb{:href => 'javascript:;'}
            %i.fa.fa-newspaper-o
            %span 预览

          %a.delete.btn.btn-rounded.btn-bdb-danger{:href => url_for(@tutorial), :data => {:confirm => '确定要删除这个教程吗？', :method => :delete}}
            %i.fa.fa-trash
            %span 删除

        .current-user
          .avatar= avatar current_user
          .name= current_user.name
      
    .page-content.container-full
      .row{:class => action_css_class}
        = yield