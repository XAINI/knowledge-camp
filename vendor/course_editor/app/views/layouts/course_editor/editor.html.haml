!!!
%html{:lang => :zh}
  %head
    %meta{:'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}

    - title = yield :page_title
    - title = "Knowledge Camp" if title.blank?

    %title= title
    = stylesheet_link_tag 'application', :media => 'screen'
    = csrf_meta_tags
    = javascript_include_tag 'application'

  %body.tutorial-editor
    .page-header
      %a.back{:href => url_for([@net])}
        %i.fa.fa-chevron-left
      .title
        %span 编辑教程：
        %span= @tutorial.title

      .right
        .saved{:style => 'display:none;'}
          %i.fa.fa-check
          %span 对教程的编辑已被保存
        .ops
          %a.publish.btn.btn-rounded.btn-bdb.btn-small{:href => 'javascript:;'}
            %span 发布教程
          %a.publish.btn.btn-rounded.btn-bdb.btn-small{:href => 'javascript:;'}
            %span 预览
        .current-user
          .avatar= avatar current_user
          .name= current_user.name
      
    .page-content.container-full
      .row{:class => action_css_class}
        = yield