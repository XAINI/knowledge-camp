.relations
  .tt= @title
  - if @tutorials.present?
    - @tutorials.each do |t|
      :ruby
        percent = rand(100)
      %a.relation{:href => e_old_explore.tutorial_path(t.id)}
        .img= fit_image t.img, :width => '100%', :height => '100%'
        %span.t
          %span= t.title
        .prog
          = @view.progress_circle percent

  - else
    .blank 没有#{@title}
