.tutorials.learning.web
  - @tutorials.each do |tutorial|
    .tutorial
      %a.tbox{:href => "/explore/tutorials/#{tutorial.id}"}
        .img
          .ibox= fit_image tutorial.image.url, :width => '100%', :height => '100%'
        .textinfo
          .title= tutorial.title
          - if tutorial.desc.blank?
            .desc.blank 没有描述信息
          - else
            .desc= tutorial.desc
        .progress
          .bar
            .p{:style => "width:#{50}%"}
          .flag.done
            .percent 50%
            .done
              %i.fa.fa-check