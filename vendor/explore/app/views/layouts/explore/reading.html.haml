%html{:lang => :zh}
  = render :partial => 'layouts/explore/head'

  %body.reading
    .page-drawer-front
      .page-header
        %a.left.back{:href => "/explore/tutorials/#{@tutorial.id}"}
          %i.fa.fa-chevron-left
        .text= @tutorial.title

      .page-content.container{:data => {:scroller => true}}
        .row{:class => action_css_class}
          - if !user_signed_in?
            .page-not-signed-in 你正以未登录状态进行浏览
          = yield