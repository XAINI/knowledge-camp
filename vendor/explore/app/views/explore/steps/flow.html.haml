.mark-overflow.disabled
  .ipter.note
    .ibox
      .head
        %i.fa.fa-pencil-square
        %span 创建笔记
        .delete 删除笔记
      %textarea{:placeholder => '填写要记录的内容'}
      .foot
        .b
          %a.ok 保存
        .b
          %a.cancel 取消

  .ipter.question
    .ibox
      .head
        %i.fa.fa-question-circle
        %span 创建问题
        .delete 删除问题
      %textarea{:placeholder => '在这里提出问题'}
      .foot
        .b
          %a.ok 保存
        .b
          %a.cancel 取消

  .ipter{:style => 'display:none;'}
    .ibox
      .head
        %i.fa.fa-list
        %span 问题列表
      %textarea{:placeholder => '在这里提出问题'}
      .foot
        .b
          %a.ok 保存
        .b
          %a.cancel 取消

  .keyboard
    .kbox= fit_image '/assets/phone-keyboard.png', :width => '100%', :height => '100%'

.steps-flow
  - @tutorial.steps.each do |step|
    .step{:data => {:id => step.id}}
      = render_cell 'explore/step', :flow_detail, step, self