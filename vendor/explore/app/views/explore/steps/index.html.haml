:ruby
  tutorials_mock2()
  tid = params[:tutorial_id]
  @tutorial = @tutorials.select{|t| t.id == tid}[0]

  steps = @tutorial.steps
  count = steps.count

.col-phone-12
  .header
    .row
      .img
        .box= fit_image @tutorial.img, :width => '100%', :height => '100%'
    .title= @tutorial.title

  .steps
    - num = 1
    - steps.each do |step|
      .step
        = render_cell 'explore/step', :detail, step, num, count, self
      - num += 1