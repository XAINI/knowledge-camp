:ruby
  tutorials_mock2()
  tid = params[:tutorial_id]
  @tutorial = @tutorials.select{|t| t.id == tid}[0]

.step
  .detail.col-phone-12
    .num
      %span end
    .title 
      %span 学习结束
      %i.fa.fa-check
    .desc 你已经完成了对“#{@tutorial.title}”的学习，接下来你可以学习：
    .children
      :ruby
        children = @tutorial.children.map {|cid|
          @tutorials.select {|t| t.id == cid}[0]
        }
      = render_cell 'explore/tutorial', :list_finish, children, self

  .control
    .prev
      :ruby
        href ="/explore/tutorials/#{@tutorial.id}/steps/#{@tutorial.steps.count}"

      %a{:href => href}
        %i.fa.fa-chevron-left

    .finished
      %a.finish{:href => "/explore/tutorials/#{@tutorial.id}"}
        %i.fa.fa-refresh