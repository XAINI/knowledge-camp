:ruby
  tutorials_mock2()
  tid = params[:tutorial_id]
  @tutorial = @tutorials.select{|t| t.id == tid}[0]

.step
  .detail.col-phone-12
    .num
      %span end
    .title 
      %span 学习结束
      %i.fa.fa-check
    .desc 你已经完成了对“#{@tutorial.title}”的学习，接下来你可以学习：
    .children
      - @tutorial.children.each do |cid|
        - child = @tutorials.select {|t| t.id == cid}[0]
        .tutorial
          %a.box{:href => "/explore/tutorials/#{child.id}"}
            .img= fit_image child.img, :width => '100%', :height => '100%'
            .title= child.title
            .desc= child.desc
            .continue
              %i.fa.fa-chevron-right

  .control
    .finished
      %a.finish{:href => "/explore/tutorials/#{@tutorial.id}"}
        %i.fa.fa-arrow-left