:ruby
  bread_data = [
    [ :home, '首页', root_url ],
  ]

.col-pad-10
  = bread bread_data, true do
    .point.piece.piece-shelf
      .piece.piece-box
        %h3 我的主题

      .net-topics.piece.piece-box
        %h4 
          %i.fa.fa-list
          %span 正在参与的主题
          %span (#{@learning_topics.count})

        - if @learning_topics.present?
          = render_cell 'explore/topic', :grid, @learning_topics
        - else
          .piece-blank 目前还没有参与任何主题

.col-pad-2
  .user-info.piece.piece-shelf.piece-bordered-paper
    .piece.piece-box
      .avatar= avatar current_user
      .user-name= current_user.name
    .stat.piece.piece-box
      %a{:href => url_for([:mine, :topics]), :data => {:toggle => true}}
        %span 主题
        %span.c #{@learning_topics.count}
    .stat.piece.piece-box
      %a{:href => url_for([:mine, :tutorials]), :data => {:toggle => true}}
        %span 教程
        %span.c #{@learning_tutorials.count}