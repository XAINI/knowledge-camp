.tutorial
  - if @tutorial.parents.present?
    .parents
      - @parents.each do |parent|
        .parent
          %span.adv 建议先掌握
          %span.t
            %i.fa.fa-warning
            %span= parent.title
  .brief
    .img= fit_image @tutorial.img, :width => '100%', :height => '100%'
  .info
    .desc= @tutorial.desc
    .points
      .t 相关知识点：
      :ruby
        points = @tutorial.related
        points = points.map {|x| KnowledgeNetStore::Point.where(:name => x)[0]}
      .plist
        = render_cell 'explore/point', :list, points, self

    .enter
      %a{:href => "/explore/tutorials/#{@tutorial.id}/flow"}
        %i.fa.fa-arrow-right
        %span 开始学习