- content_for(:active) { 'all-topics' }

.topics
  - @topics.each do |topic|
    .topic
      %a.tbox{:href => "/explore/topics/#{topic.id}"}
        .img
          .ibox= fit_image topic.img, :width => '100%', :height => '100%'
        .info
          .ifbox
            .title= topic.title
            .desc= topic.desc
        .stat
          .tutorials-count
            %i.fa.fa-book
            %span= topic.tutorials.count