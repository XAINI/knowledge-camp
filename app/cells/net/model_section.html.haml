%section{:class => @section_klass, :id => @section_klass}
  .header
    %a.title{:href => @more_url, :data => @data_toggle}= @title
    %a.btn.btn-rounded.btn-bdb.btn-small{:href => @new_url, :data => @data_toggle}
      %i.fa{:class => @new_icon_klass}
      %span= @new_string

  - begin
    = render_cell @name, :grid, @models
  - rescue
    .-on-dev
      = "ERROR: 未定义 Cell #{@name}, :grid #{@error_string}"

  .show-more
    %a{:href => @more_url, :data => @data_toggle}
      查看所有 #{@count} 个#{@name_human}