= simple_form_for @net, :url => @url, :defaults => {:input_html => {:class => 'form-control'}} do |f|
  .form-group
    = f.input :name, :placeholder => "名称", :label => false
  .form-group
    = f.input :desc, :placeholder => "描述", :label => false, :as => :text, :input_html => {:rows => 10}
  .form-group
    = f.submit :class => 'btn btn-pill btn-bdb-fresh'
