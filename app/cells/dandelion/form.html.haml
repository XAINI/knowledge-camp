%h2.cell= @h2

= simple_form_for @model, :defaults => {:label => false, :input_html => {:class => 'form-control'}} do |f|
  .form-group
    = f.input :name, :placeholder => "名称"
  .form-group
    = f.input :desc, :placeholder => "描述", :as => :text, :input_html => {:rows => 10}
  .form-group
    = f.submit :class => 'btn btn-rounded btn-bdb-fresh'
