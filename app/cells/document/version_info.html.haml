.cell-document-version-info
  .last-version
    %span= @last_editor.name
    %br
    %span 在
    %span= @document.updated_at
    %br
    %span 进行了最后一次编辑

  .current-version
    %span 当前版本: 
    %strong #{@document.version}

  .count
    %a.history{:href => url_for([:old, :manage, @document, :versions]), :data => {:toggle => ['open', 'close']}}
      %span 总共 #{@document.versions.count + 1} 个历史版本

  = render_cell :document, :versions_list, @document, @document
