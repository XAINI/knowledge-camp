%h2.cell= @h2

= simple_form_for @plan, :url => @url, :as => :plan, :defaults => {:label => false, :input_html => {:class => 'form-control'}} do |f|
  .form-group
    = f.input :name
  .form-group
    = f.input :desc, :as => :text, :input_html => {:rows => 10}
  .form-group
    - nets = KnowledgeNetStore::Net.all
    = f.input :net_id, :collection => nets, :include_blank => false, :label => nil
  .form-group
    = f.submit :class => 'btn btn-rounded btn-bdb-fresh'
    %a.cancel.btn.btn-rounded.btn-bdb{:href => '/plans'} 取消