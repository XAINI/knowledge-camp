.navbar
  =link_to "首页", "/"
  >
  =link_to "知识网列表", "/knowledge_nets"
  >
  =link_to @net.name, "/knowledge_nets/#{@net.id}"

.page-point-new
  = simple_form_for @point, :url => "/knowledge_nets/#{@net.id}/knowledge_points" do |f|
    .field= f.input :name, :placeholder => "名称"
    .field= f.input :desc, :placeholder => "描述", :as => :text
    .field= f.association :parents, :collection => @net.points, :as => :check_boxes

    .field
      = f.submit "创建"
      = link_to "取消", "/knowledge_nets/#{@net.id}"