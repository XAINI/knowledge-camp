.navbar
  = link_to "首页", "/"
  >
  = link_to "教学计划列表", "/plans"
  >
  = link_to "教学计划: #{@topic.plan.name}", "/plans/#{params[:plan_id]}"
  >
  主题: #{@topic.name}

.page-model-form
  .action
    = link_to "返回", "/plans/#{@topic.plan_id}"
    = link_to "添加新教程", "/topics/#{@topic.id}/tutorials/new"
    = delete_link "[删除]", "/topics/#{@topic.id}"

  = plan_store_form_for @topic, "/topics/#{@topic.id}"

.page-model-list
  - locals = {:items => @tutorials}
  = render :partial => "/plan_store_partials/item_list", :locals => locals
