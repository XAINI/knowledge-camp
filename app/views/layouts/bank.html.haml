!!!
%html{:lang => :zh}
  %head
    %meta{:'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}

    - title = yield :page_title
    - title = "Knowledge Camp" if title.blank?

    %title= title
    = csrf_meta_tags

    = stylesheet_link_tag 'bank', :media => 'screen', :'data-turbolinks-track' => true
    = javascript_include_tag 'bank', :'data-turbolinks-track' => true

  %body
    %nav.navbar.navbar-default
      .container
        .navbar-header
          %a.navbar-brand{:href => "/bank"} 首页

        %ul.nav.navbar-nav
          %li
            %a{:href => "/bank/courses"} 课程中心
          %li
            %a{:href => "/bank/dashboard"} 个人页
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :"data-toggle" => "dropdown", :role => "button", :"aria-haspopup" => "true", :"aria-expanded" => "false"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li
                %a{:href => "/bank/notifications"} 通知
              %li
                %a{:href => "/account/sign_out", :data => {:method => :delete}} 退出登录

    .container= yield
