!!!
%html{:lang => :zh}
  %head
    %meta{:'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}

    - title = yield :page_title
    - title = "Knowledge Camp" if title.blank?

    %title= title
    = csrf_meta_tags

    = stylesheet_link_tag 'bank', :media => 'screen', :'data-turbolinks-track' => true
    = javascript_include_tag 'bank', :'data-turbolinks-track' => true

  %body

    - if current_user.blank?
      = render :partial => "/layouts/unsigned_in_nav"
    - else
      = render :partial => "/layouts/signed_in_nav"

    .container= yield
