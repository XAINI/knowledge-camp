.col-pad-10.col-pad-offset-1
  .nets
    - @nets.each do |net|
      :ruby
        tutorials = @tutorials.select {|x| x.net_id.to_s == net.id}
      .net
        .name
          %i.fa.fa-chevron-right
          %span= net.name
          %span （#{tutorials.length} 个教程）
      .tutorials
        .row
          = render_cell :tutorial, :sample_list, tutorials