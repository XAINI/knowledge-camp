- url = "/bank/manage/model_labels/#{@model_label.id}"

.page-bank-manage-model-label-edit
  .page-header
    %h3
      %a{href: url_for([:bank, :manage, :model_labels])} 标签管理
      %span /
      = "修改#{ModelLabel.get_name_by_model(@model_label.model.constantize)}的标签"

  .nav.nav-tabs
    %li.icon
      %a{href: '/bank/manage/model_labels'}
        %i.glyphicon.glyphicon-th-list
        %span 列表
    %li.icon.active
      %a{href: "/bank/manage/model_labels/#{@model_label.id}/edit"}
        %i.glyphicon.glyphicon-pencil
        修改

  = simple_form_for @model_label, :url => url do |f|
    = f.input :model, :as => :hidden
    = f.input :name, :disabled => true
    = f.input :values

    %br
    .form-actions
      %button.btn.btn-primary
        %i.glyphicon.glyphicon-ok{type: 'submit'}
        保存
      %span.extra_buttons
        %a.btn.btn-default{type: 'button', href: url_for([:bank, :manage, :test_questions])}
          %i.glyphicon.glyphicon-remove
          取消
