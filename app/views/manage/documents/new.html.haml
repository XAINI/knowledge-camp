:ruby
  bread_data = [
    [ :net, @net.name, url_for([:manage, @net]) ],
    [ :documents, '查看所有文档', url_for([:manage, @net, :documents]) ]
  ]

.page-side.col-pad-1
.page-main.col-pad-10
  = bread bread_data do
    .document
      - url = "/manage/nets/#{@net.id}/documents"

      = simple_form_for @document, :as => :document, :url => url do |f|
        .row
          .col-pad-9
            .editor
              = f.input :title
              = f.input :content, :as => :ueditor
          .col-pad-3
            .side
              .info 
                %strong
                  %span 你可以在这里撰写文档，
                  %span 点击“保存”按钮
                  %span 来保存你的工作。
              .ops
                - klass = "btn btn-rounded btn-bdb-fresh"
                = f.submit "保存", :class => klass

                %a.btn.btn-rounded.btn-bdb{:href => url_for([:manage, @net]), :data => {:toggle => ['open', 'close']}}
                  %span 取　消