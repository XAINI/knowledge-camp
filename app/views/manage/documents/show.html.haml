.page-side.col-pad-1

.page-main.col-pad-10
  .page-bread-pieces
    .bread{:style => 'margin-left:10px;margin-right:10px;'}
      .link.net
        %a{:href => url_for([:manage, @document.net]), :data => {:toggle => ['open', 'close']}}
          = @document.net.name
      .bread.current
        .documents
          .title= @document.title
          .edited #{@editor.name}于#{@document.updated_at}做了最后一次修改
          .version 当前版本: #{@document.version}
          - id = @document.id
          %a.versions{:href => "/manage/documents/#{id}/versions"}
            历史版本
          .content= @document.content
          %a.edit{:href => "/manage/documents/#{id}/edit"}
            编辑
          %a.delete{:href => "/manage/documents/#{id}", :data => {:method => :delete, :confirm => "确定删除?"}}
            删除
          %a.back{:href => "/manage/nets/#{@document.net.id}/documents"}
            返回
