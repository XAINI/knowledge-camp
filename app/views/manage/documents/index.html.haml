:ruby
  bread_data = [
    [ :net, @net.name, url_for([:manage, @net]) ]
  ]

.page-main.col-pad-10.col-pad-offset-1
  = bread bread_data do
    .documents.piece.piece-shelf
      .piece.piece-box
        %h4.title 查看所有文档
        .piece.piece-ops
          .op.new
            %a{:href => url_for([:new, :manage, @net, :document]), :data => {:toggle => ['open', 'close']}}
              %i.fa.fa-pencil
              %span= I18n.t('views.new.document')

        = render_cell :document, :grid, @documents
