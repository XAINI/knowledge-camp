- page_title @net.name

.page-side.col-pad-2
  .nav{:data => {:'fixtop-offset' => 30}}
    .back
      %a{:href => url_for([:manage, :nets]), :data => {:toggle => true}}
        %i.fa.fa-arrow-left
        %span 退出

    - [:point, :document, :file, :plan].each do |model_name|
      = render_cell :net, :nav_items, @net, model_name

.page-main.col-pad-10
  .sections
    %section.net
      .name= @net.name
      .desc= @net.desc

    %section
      %a.btn.btn-rounded.btn-bdb-dream{:href => url_for([:graph, :manage, @net]), :data => {:toggle => ['fade', 'fade']}}
        %i.fa.fa-circle-o
        %span 图形化展示

    = render_cell :net, :model_section, @net, :point, 20

    - [:document, :file].each do |model_name|
      = render_cell :net, :model_section, @net, model_name