.col-pad-10.col-pad-offset-1
  .user
    .header
      .avatar= avatar @user
      .info
        .name= @user.name
        .login= @user.login
        .last-sign-in 
          - if @user.last_sign_in_at.present?
            %span 最后登录时间：#{@user.last_sign_in_at.to_s(:db)}
          - else
            %span 从未登录过