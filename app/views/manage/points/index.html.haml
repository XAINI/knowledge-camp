:ruby
  bread_data = [
    [ :net, @net.name, url_for([:manage, @net]) ]
  ]

.page-main.col-pad-10.col-pad-offset-1
  = bread bread_data do
    .points.piece.piece-shelf
      .piece.piece.piece-box
        %h4.title 知识点浏览
        .piece.piece-ops
          .op.new
            %a{:href => url_for([:new, :manage, @net, :point]), :data => {:toggle => ['open', 'close']}}
              %i.fa.fa-plus
              %span= I18n.t('views.new.point')

        = render_cell :point, :grid, @net.points.order(:updated_at => :desc)