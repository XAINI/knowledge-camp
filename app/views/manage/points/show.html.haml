:ruby
  @net = @point.net

  bread_data = [
    [ :net, @net.name, url_for([:manage, @net]) ],
    [ :forms, '查看所有知识点', url_for([:manage, @net, :points]) ]
  ]

.page-main.col-pad-10.col-pad-offset-1
  = bread bread_data do
    .point
      .info
        %h2.name=@point.name
        .desc=@point.desc

      .parents
        %h3.title 前置知识点
        = render_cell :point, :grid, @point.parents

      .children
        %h3.title 后续知识点
        = render_cell :point, :grid, @point.children

