:ruby
  @net = @point.net

  bread_data = [
    [ :net, @net.name, url_for([:manage, @net]) ],
    [ :forms, '查看所有知识点', url_for([:manage, @net, :points]) ]
  ]

.page-main.col-pad-10.col-pad-offset-1
  = bread bread_data do
    .point
      .info
        .ops
          .edit
            %a{:href => url_for([:edit, :manage, @point]), :data => {:toggle => ['open', 'close']}}
              %i.fa.fa-pencil
              %span 编辑修改

        %h2.name=@point.name
        .desc=@point.desc

      .parents
        .ops
          .assign
            %a{:href => url_for([:assign_parent, :manage, @point]), :data => {:toggle => ['open', 'close']}}
              %i.fa.fa-circle-o
              %span 指定前置

        %h3.title 前置知识点
        = render_cell :point, :list, @point.parents

      .children
        .ops
          .assign
            %a{:href => url_for([:assign_child, :manage, @point]), :data => {:toggle => ['open', 'close']}}
              %i.fa.fa-circle-o
              %span 指定后续

        %h3.title 后续知识点
        = render_cell :point, :list, @point.children

